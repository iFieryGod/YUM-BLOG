<header class="py-2 text-white edit-page-color" id="main-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1><i class="fas fa-user-edit"></i> Edit</h1>
        </div>
      </div>
    </div>
  </header>
  <section class="py-4 mb-4 bg-light" id="actions">
    <div class="container">
      <div class="row">
        <div class="col-md-3 mr-auto"><a class="btn edit-page-color text-white" href="/blog"><i class="fa fa-arrow-left"></i> Back To Blog </a></div>
      </div>
    </div>
  </section>
  <section class="mb-3" id="post">
    <div class="row">
      <div class="col-md-9">
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="card">
                <div class="card-header">
                  <h4>Edit Post</h4>
                </div>
                <div class="card-body">
                  <form action="/post/{{post._id}}?_method=PUT" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                      <label for="title">Title</label>
                      <input class="form-control" name="title" type="text" value="{{post.title}}">
                    </div>
                    <div class="form-group">
                      <label for="file">Image Upload</label>
                      <input class="form-control-file" type="file" name="image"><small class="form-test text-muted">Max Size 3MB</small>
                    </div>
                    <div class="form-group">
                      <label for="message">Body</label>
                      <textarea class="form-control" name="editor1">{{post.comment}}</textarea>
                      <button class="btn edit-page-color text-white mt-2" type="submit">Save Changes</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="mr-auto ml-auto">
         <h3 class="text-center">{{post.title}}</h3>
        <img src="../../images/{{post.image}}" class="img-fluid mb-3 mr-auto ml-auto"> 
        </div>
        <div class="container">
          <h4></h4>
          <div class="row">
            <div class="col-6">
              {{#each postAll}}
              <h5>{{title}}</h5>
              <img src="../../images/{{image}}" class="d-block img-fluid mb-3 mr-auto" style="width: 120px; height: 80px;">
            {{/each}}
            <div class="col-6">
            </div>
          </div>
        </div> 
      </div>
    </div>
  </section>